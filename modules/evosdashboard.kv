#:kivy 1.9.0



<Rows>:
    orientation: 'vertical'

    BoxLayout:
        id: row0
        orientation: 'horizontal'
        size_hint: (1.0, 0.3)

        ExitWidget:
        VehicleModeWidget:
        LapWidget:
        IgnitionWidget:
        ExitWidget:

    BoxLayout:
        id: row1
        orientation: 'horizontal'
        size_hint: (1.0, 0.4)
        RPMWidget:
        CopilotWidget:
        SpeedWidget:

    BoxLayout:
        id: row2
        orientation: 'horizontal'
        size_hint: (1.0, 0.3)

        ExitWidget:
        SignalStrengthWidget:
        EngineTempWidget:
        FuelConsumptionWidget:
        ExitWidget:

# Row 0
<VehicleModeWidget>:
